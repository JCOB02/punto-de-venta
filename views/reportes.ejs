                            <div class="card-footer text-center">
                                <button class="btn btn-primary">Ver Reporte Completo</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Include Footer -->
            <div id="footer-container">
                <%- include("partials/footer.ejs") %>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>

        document.getElementById('pageTitle').innerText = 'Reportes';
        document.querySelectorAll('.sidebar-item').forEach(item => {
            if (item.getAttribute('href') === '/reportes') {
                item.classList.add('active');
            } else {
                item.classList.remove('active');
            }});
            // Initialize Charts
            let salesChart = null;
            let topProductsChart = null;
            let categorySalesChart = null;
            let sellerPerformanceChart = null;

            initSalesChart();
            initTopProductsChart();
            initCategorySalesChart();
            initSellerPerformanceChart();
            
            // Set up period buttons
            document.querySelectorAll('[data-report-period]').forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    document.querySelectorAll('[data-report-period]').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    
                    // Add active class to clicked button
                    this.classList.add('active');
                    
                    // Update charts based on selected period
                    const period = this.getAttribute('data-report-period');
                    console.log(`Changing period to: ${period}`);
                    // Here we would typically update the charts with new data
                    // For demo purposes, we'll just reinitialize them
                    initSalesChart(period);
                    initTopProductsChart(period);
                    initCategorySalesChart(period);
                    initSellerPerformanceChart(period);
                });
            });
        
        // Chart initialization functions
        function initSalesChart(period) {
            const ctx = document.getElementById('salesChart').getContext('2d');
            if (salesChart) salesChart.destroy(); // Destroy previous chart instance if it exists
    
            
            // Sample data based on period
            let labels, data;
            
            switch(period) {
                case 'week':
                    labels = ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado', 'Domingo'];
                    data = [3200, 2800, 4100, 3600, 5200, 6100, 2900];
                    break;
                case 'month':
                    labels = ['Semana 1', 'Semana 2', 'Semana 3', 'Semana 4'];
                    data = [12500, 14300, 10800, 15400];
                    break;
                case 'quarter':
                    labels = ['Enero', 'Febrero', 'Marzo'];
                    data = [35000, 42000, 38500];
                    break;
                case 'year':
                    labels = ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'];
                    data = [32000, 36000, 38500, 42000, 45000, 48000, 46000, 49000, 52000, 54000, 58000, 62000];
                    break;
                default: // day
                    labels = ['9:00', '10:00', '11:00', '12:00', '13:00', '14:00', '15:00', '16:00', '17:00', '18:00'];
                    data = [450, 650, 820, 1200, 980, 1100, 1350, 1500, 1250, 950];
            }
            
            salesChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Ventas ($)',
                        data: data,
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        borderColor: '#3B82F6',
                        borderWidth: 2,
                        tension: 0.3,
                        pointBackgroundColor: '#3B82F6',
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                borderDash: [2, 2]
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        }
        
        function initTopProductsChart(period = 'day') {
            const ctx = document.getElementById('topProductsChart').getContext('2d');
            if (topProductsChart) topProductsChart.destroy(); // Destroy previous chart instance if it exists
            topProductsChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Camiseta Básica', 'Pantalón Vaquero', 'Vestido Elegante', 'Zapatos Deportivos', 'Chaqueta Invierno'],
                    datasets: [{
                        data: [12, 8, 6, 5, 4],
                        backgroundColor: [
                            '#3B82F6',
                            '#10B981',
                            '#F59E0B',
                            '#EF4444',
                            '#8B5CF6'
                        ],
                        borderWidth: 0,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                boxWidth: 12,
                                padding: 15
                            }
                        }
                    },
                    cutout: '70%'
                }
            });
        }
        
        function initCategorySalesChart(period = 'day') {
            const ctx = document.getElementById('categorySalesChart').getContext('2d');
            if (categorySalesChart) categorySalesChart.destroy(); // Destroy previous chart instance if it exists
            
            categorySalesChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Camisetas', 'Pantalones', 'Vestidos', 'Zapatos', 'Chaquetas'],
                    datasets: [{
                        label: 'Ventas ($)',
                        data: [3500, 2800, 1900, 2500, 1500],
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.7)',
                            'rgba(16, 185, 129, 0.7)',
                            'rgba(245, 158, 11, 0.7)',
                            'rgba(239, 68, 68, 0.7)',
                            'rgba(139, 92, 246, 0.7)'
                        ],
                        borderWidth: 0,
                        borderRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                borderDash: [2, 2]
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        }
        
        function initSellerPerformanceChart(period = 'day') {
            const ctx = document.getElementById('sellerPerformanceChart').getContext('2d');
            if (sellerPerformanceChart) sellerPerformanceChart.destroy(); // Destroy previous chart instance if it exists
            
            sellerPerformanceChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Ana Martínez', 'Carlos López', 'María Gómez', 'Roberto Sánchez', 'Lucía Torres'],
                    datasets: [{
                        label: 'Ventas ($)',
                        data: [4250, 3650, 2980, 1950, 1320],
                        backgroundColor: 'rgba(59, 130, 246, 0.7)',
                        borderWidth: 0,
                        borderRadius: 4
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            grid: {
                                borderDash: [2, 2]
                            }
                        },
                        y: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        }
    </script>
